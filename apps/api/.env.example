# ===========================================
# Metaphoi API Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# App Configuration
# -----------------
APP_NAME=Metaphoi API
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Supabase (Required)
# -------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# JWT Authentication
# ------------------
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Services (Optional - for AI analysis features)
# ------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Toss Payments (Optional - for payment features)
# -----------------------------------------------
TOSS_SECRET_KEY=test_sk_your-toss-secret-key
TOSS_CLIENT_KEY=test_ck_your-toss-client-key

# CORS
# ----
CORS_ORIGINS=["http://localhost:3000"]

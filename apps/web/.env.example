# ===========================================
# Metaphoi Web Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values

# API URL
# -------
NEXT_PUBLIC_API_URL=http://localhost:8000

# Supabase (for client-side auth)
# -------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Toss Payments (Client Key only - never expose secret key in frontend)
# ---------------------------------------------------------------------
NEXT_PUBLIC_TOSS_CLIENT_KEY=test_ck_your-toss-client-key

# App Settings
# ------------
NEXT_PUBLIC_APP_NAME=Metaphoi
NEXT_PUBLIC_APP_URL=http://localhost:3000
